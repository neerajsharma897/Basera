<% layout('/layouts/boilerplate') -%>
<body>
    <div class="row">
        <div class="col-8 offset-2"><br>
            <div class="form-container" style="border: 1px solid #ddd; border-radius: 1rem; padding: 2rem; background: #fff;">
                <h3 class="mb-4">Edit Listing</h3>
                <form method="post" action="/listings/<%= listing._id %>/?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" name="listing[title]" class="form-control" value="<%= listing.title %>" required>
                        <div class="invalid-feedback">Title required*</div>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea name="listing[description]" class="form-control" rows="4" required><%= listing.description %></textarea>
                        <div class="invalid-feedback">Description required*</div>
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Image</label>
                        <input type="file" name="listing[image]" class="form-control">
                        <div class="invalid-feedback">Image URL required*</div>
                    </div>
                    <div class="mb-3">
                        <label for="category" class="form-label">Category</label>
                        <select name="listing[category]" id="category" class="form-select" required>
                            <option value="Beach" <%= listing.category === 'Beach' ? 'selected' : '' %>>Beach</option>
                            <option value="Mountains" <%= listing.category === 'Mountains' ? 'selected' : '' %>>Mountains</option>
                            <option value="Cities" <%= listing.category === 'Cities' ? 'selected' : '' %>>Cities</option>
                            <option value="Lakes" <%= listing.category === 'Lakes' ? 'selected' : '' %>>Lakes</option>
                            <option value="Castles" <%= listing.category === 'Castles' ? 'selected' : '' %>>Castles</option>
                            <option value="Treehouses" <%= listing.category === 'Treehouses' ? 'selected' : '' %>>Treehouses</option>
                            <option value="Skiing" <%= listing.category === 'Skiing' ? 'selected' : '' %>>Skiing</option>
                            <option value="Tropical" <%= listing.category === 'Tropical' ? 'selected' : '' %>>Tropical</option>
                            <option value="Safari" <%= listing.category === 'Safari' ? 'selected' : '' %>>Safari</option>
                            <option value="Desert" <%= listing.category === 'Desert' ? 'selected' : '' %>>Desert</option>
                            <option value="Camping" <%= listing.category === 'Camping' ? 'selected' : '' %>>Camping</option>
                            <option value="Farms" <%= listing.category === 'Farms' ? 'selected' : '' %>>Farms</option>
                            <option value="Boats" <%= listing.category === 'Boats' ? 'selected' : '' %>>Boats</option>
                            <option value="Arctic" <%= listing.category === 'Arctic' ? 'selected' : '' %>>Arctic</option>
                        </select>
                        <div class="invalid-feedback">Please select a category.</div>
                    </div>

                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label">Price</label>
                            <input type="number" name="listing[price]" value="<%= listing.price %>" class="form-control" required>
                            <div class="invalid-feedback">Price required*</div>
                        </div>

                        <div class="mb-3 col-md-8">
                            <label for="location" class="form-label">Location</label>
                            <input type="text" name="listing[location]" class="form-control" value="<%= listing.location %>" required>
                            <div class="invalid-feedback">Location required*</div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" name="listing[country]" class="form-control" value="<%= listing.country %>" required>
                        <div class="invalid-feedback">Country required*</div>
                    </div>

                    <button type="submit" class="btn cus-btn">Update</button>
                    <a href="/listings/<%= listing._id %>" class="btn btn-dark">Cancel</a>
                </form>
            </div>
            <br><br>
        </div>
    </div>
</body>