<% layout('/layouts/boilerplate') -%>
<body>
    <div class="row mt-4">
        <div class="col-lg-8 col-md-10 offset-lg-2 offset-md-1">
            <!-- Listing Card -->
            <div class="show-container" style="border: 1px solid #ddd; border-radius: 1rem; padding: 1.5rem; background: #fff;">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h2 class="mb-0"><%= listing.title %></h2>
                    <a href="/listings" class="btn btn-outline-dark btn-sm">
                        <i class="fa-solid fa-arrow-left"></i> Back
                    </a>
                </div>
                
                <img src="<%= listing.image.url %>" class="img-fluid rounded" alt="<%= listing.title %>" style="width: 100%; max-height: 400px; object-fit: cover;">
                
                <div class="mt-4">
                    <div class="d-flex align-items-center mb-3">
                        <i class="fa-solid fa-user-circle fa-lg me-2" style="color: #717171;"></i>
                        <span>Hosted by <strong><%= listing.owner.username %></strong></span>
                    </div>

                    <div class="mb-3">
                        <span class="badge" style="background-color: #f7f7f7; color: #222; border: 1px solid #ddd; padding: 0.5rem 1rem; font-size: 0.85rem;">
                            <i class="fa-solid fa-tag me-1"></i> <%= listing.category %>
                        </span>
                    </div>

                    <div class="mb-3">
                        <h5>About this place</h5>
                        <p style="color: #484848; line-height: 1.6;"><%= listing.description %></p>
                    </div>

                    <div class="d-flex align-items-center mb-3">
                        <i class="fa-solid fa-location-dot me-2" style="color: #fe424d;"></i>
                        <span><%= listing.location %>, <%= listing.country %></span>
                    </div>

                    <div class="price-tag p-3" style="background: #f7f7f7; border-radius: 0.75rem; display: inline-block;">
                        <span style="font-size: 1.5rem; font-weight: 600;">&#8377;<%= listing.price.toLocaleString("en-IN") %></span>
                        <span style="color: #717171;"> / night</span>
                    </div>
                </div>

                <% if(currentUser && listing.owner._id.equals(currentUser._id)) { %>
                <hr class="my-4">
                <div class="d-flex gap-2">
                    <a href="/listings/<%= listing._id %>/edit" class="btn cus-btn">
                        <i class="fa-solid fa-pen-to-square me-1"></i> Edit
                    </a>
                    <form method="post" action="/listings/<%= listing._id %>/?_method=DELETE">
                        <button class="btn btn-outline-danger">
                            <i class="fa-solid fa-trash me-1"></i> Delete
                        </button>
                    </form>
                </div>
                <% } %>
            </div>
        </div>
            
        <div class="col-lg-8 col-md-10 offset-lg-2 offset-md-1 mt-4">
            <!-- Review Form -->
            <% if(currentUser) { %>
            <div class="review-form-container" style="border: 1px solid #ddd; border-radius: 1rem; padding: 1.5rem; background: #fff;">
                <h4 class="mb-3"><i class="fa-solid fa-star me-2" style="color: #ffc107;"></i>Leave a Review</h4>
                <form method="post" action="/listings/<%= listing._id %>/reviews" novalidate class="needs-validation">
                    <div class="mb-3">
                        <label class="form-label">Your Rating</label>
                        <fieldset class="starability-basic">
                            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                            <label for="first-rate1" title="Terrible">1 star</label>
                            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                            <label for="first-rate2" title="Not good">2 stars</label>
                            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                            <label for="first-rate3" title="Average">3 stars</label>
                            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                            <label for="first-rate4" title="Very good">4 stars</label>
                            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                            <label for="first-rate5" title="Amazing">5 stars</label>
                        </fieldset>
                    </div>
                    <div class="mb-3">
                        <label for="comment" class="form-label">Your Comment</label>
                        <textarea name="review[comment]" id="comment" rows="4" class="form-control" placeholder="Share your experience..." required></textarea>
                        <div class="invalid-feedback">Please add a comment.</div>
                    </div>
                    <button class="btn cus-btn">
                        <i class="fa-solid fa-paper-plane me-1"></i> Submit Review
                    </button>
                </form>
            </div>
            <% } %>

            <!-- Reviews Section -->
            <div class="reviews-section mt-4" style="border: 1px solid #ddd; border-radius: 1rem; padding: 1.5rem; background: #fff;">
                <h4 class="mb-3"><i class="fa-solid fa-comments me-2"></i>Reviews (<%= listing.reviews.length %>)</h4>
                <% if(listing.reviews.length === 0) { %>
                    <p style="color: #717171;">No reviews yet. Be the first to review!</p>
                <% } else { %>
                <div class="row">
                    <% for(review of listing.reviews) { %>
                    <div class="col-md-6 mb-3">
                        <div class="review-card p-3" style="border: 1px solid #ebebeb; border-radius: 0.75rem; height: 100%;">
                            <div class="d-flex align-items-center mb-2">
                                <div class="review-avatar me-2" style="width: 40px; height: 40px; background: #f7f7f7; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                                    <i class="fa-solid fa-user" style="color: #717171;"></i>
                                </div>
                                <strong><%= review.author.username %></strong>
                            </div>
                            <p class="starability-result mb-2" data-rating="<%= review.rating %>"></p>
                            <p class="mb-2" style="color: #484848;"><%= review.comment %></p>
                            <% if(currentUser && (review.author._id.equals(currentUser._id) || listing.owner._id.equals(currentUser._id))) { %>
                            <form method="post" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                                <button class="btn btn-sm btn-outline-secondary">
                                    <i class="fa-solid fa-trash-can me-1"></i> Remove
                                </button>
                            </form>
                            <% } %>
                        </div>
                    </div>
                    <% } %>
                </div>
                <% } %>
            </div>
            <br><br>
        </div>
    </div>
</body>
