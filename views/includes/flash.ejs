<% if(success && success.length) { %>
     <div class="alert alert-success alert-dismissible fade show col-8 offset-2 mt-2" role="alert" style="border-radius: 2rem;">
        <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
     </div>
     
<% } %>

<% if(error && error.length) { %>
    <div class="alert alert-danger alert-dismissible fade show col-8 offset-2 mt-2" role="alert" style="border-radius: 2rem;">
        <%= error %> 
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>
